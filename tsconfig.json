{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "noImplicitAny": true
    },
    "$schema": "https://json.schemastore.org/tsconfig"
}
